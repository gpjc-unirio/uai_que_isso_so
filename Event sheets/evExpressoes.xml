                </action>
                <action id="-41" name="Wait for signal" sid="100800885211680" type="System">
                    <param id="0" name="Tag">&quot;proxima&quot;</param>
                </action>
                <action id="0" name="Set text" sid="388910417185417" type="txtTituloFase">
